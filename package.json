{
  "name": "n8n-nodes-convex",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Convex Finance providing 8 resources and 40+ operations for DeFi yield optimization, staking, locking, and governance data. Includes pool APY tracking, cvxCRV staking metrics, vlCVX voting power, and multi-protocol support.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-convex.git"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-convex#readme",
  "bugs": {
    "url": "https://github.com/Velocity-BPA/n8n-nodes-convex/issues"
  },
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "convex",
    "convex-finance",
    "defi",
    "yield-optimization",
    "curve",
    "cvx",
    "crv",
    "staking",
    "liquidity-mining",
    "blockchain",
    "ethereum",
    "web3"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "COMMERCIAL_LICENSE.md",
    "LICENSING_FAQ.md",
    "README.md"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ConvexApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Convex/Convex.node.js",
      "dist/nodes/Convex/ConvexTrigger.node.js"
    ]
  },
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "*",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  }
